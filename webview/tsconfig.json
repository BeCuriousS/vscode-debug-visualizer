{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"strict": true,
		"outDir": "dist",
		"lib": ["DOM", "ES2023", "DOM.Iterable"],
		"skipLibCheck": true,
		"rootDir": "./src",
		"resolveJsonModule": true,
		"newLine": "LF",
		"sourceMap": true,
		"jsx": "react",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*"]
}
